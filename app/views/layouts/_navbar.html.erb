<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="header_icon">
      <% unless controller.controller_name == 'ToppagesController' %>
        <% if logged_in? %>
          <%= image_tag current_user.image.thumb.url, class: "rounded-circle" %>
        <% end %>
      <% end %>
    </div>
    <a class="navbar-brand " href="/">hairshot</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
      <ul class="navbar-nav">
         <% if logged_in? %>
          <li class="nav-item"><%= link_to 'トップ', root_path, class: "nav-link" %></li>
          <li class="nav-item">
            <%= link_to new_post_path do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </li>
          <li class="nav-item"><%= link_to "ホーム", posts_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "サロンユーザー", users_path(@users), class: "nav-link" %></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "一般ユーザー新規登録", general_user_signup_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "サロンユーザー新規登録", signup_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
<ul class="list-unstyled text-center">
    <% posts.each do |post| %>
      <li>
        <div class="post_content mb-3 border" id="point">
          <div>
            <p><%= link_to post.title, post %></p>
          </div>
          <div>
            <%= image_tag post.image.icon.url %>
          </div>
          <div>
            <% if current_general_user %>
              <%= render "favorites/favorites", post: post %>
            <% else %>
              <%= link_to "編集", edit_post_path(post), class: "btn btn-secondary" %>
              <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除してよろしいですか？"}, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
    <div>
      <% unless controller.controller_name == "general_users" %>
      <%= paginate posts %> 
      <% end %>
    </div>
</ul>


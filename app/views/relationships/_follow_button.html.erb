<% unless current_user %>
  <% if current_general_user.following?(user) %>
    <%= form_with(model: current_general_user.relationships.find_by(user_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= button_tag type: "submit", class: "btn btn-default" do %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= form_with(model: current_general_user.relationships.build, local: true) do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= button_tag type: "submit", class: "btn btn-default" do %>
        <i class="far fa-heart"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>